@model MVC_School.Models.Entity.tblScore
@{
    ViewBag.Title = "Bring";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("ScoreEdit", "Score", FormMethod.Post))
{
    <div class="form-group">
        <label>Course</label>
        @Html.DropDownListFor(m => m.tblCours.courseId, (List<SelectListItem>)ViewBag.crs, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Student</label>
        @Html.DropDownListFor(m => m.tblStudent.stdId, (List<SelectListItem>)ViewBag.std, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Exam 1</label>
        @Html.TextBoxFor(m => m.exam1, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Exam 2</label>
        @Html.TextBoxFor(m => m.exam2, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Exam 3</label>
        @Html.TextBoxFor(m => m.exam3, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Assignment</label>
        @Html.TextBoxFor(m => m.assignment, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Average</label>
        @Html.TextBoxFor(m => m.average, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Status</label>
        @Html.TextBoxFor(m => m.status, new { @class = "form-control" })
    </div>
    @Html.HiddenFor(m => m.scoreId)
    <div style="margin-top:10px">
        <button class="btn btn-success">UPDATE</button>
    </div>
}