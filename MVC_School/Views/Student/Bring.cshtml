@model MVC_School.Models.Entity.tblStudent
@{
    ViewBag.Title = "Bring";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("StudentEdit", "Student", FormMethod.Post))
{
    <div class="form-group">
        <label>Name and Surname</label>
        @Html.TextBoxFor(m => m.stdNameSurname, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Image</label>
        @Html.TextBoxFor(m => m.stdImage, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Gender</label>
        @Html.TextBoxFor(m => m.stdGender, new { @class = "form-control" })
    </div>
    <div>
        <label>Social Club</label>
        @Html.DropDownListFor(m => m.tblSocialClub.socialClubId, (List<SelectListItem>)ViewBag.clb, new { @class = "form-control" })
    </div>
    @Html.HiddenFor(m => m.stdId)
    <div style="margin-top:10px">
        <button class="btn btn-success">UPDATE</button>
    </div>
}